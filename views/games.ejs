    "gta": { 
        size: "65 GB", 
        rating: "4.8", 
        installs: "150M+" 
    },
    "clashofclans": { 
        size: "250 MB", 
        rating: "4.6", 
        installs: "500M+" 
    },
    "asphalt9": { 
        size: "1.8 GB", 
        rating: "4.5", 
        installs: "100M+" 
    }
};


function viewGameDetails(gameId) {
    // Select the game card and prevent further clicks if details are already displayed
    const gameCard = document.getElementById(gameId);
    if (gameCard.classList.contains("details-view")) return;

    // Add 'details-view' class to prevent further clicks until reset
    gameCard.classList.add("details-view");

    // Create a div to display details with animation
    const detailsDiv = document.createElement("div");
    detailsDiv.className = "game-details";
    detailsDiv.style.animation = "fadeIn 0.5s ease-in-out";

    // Get details from predefined object
    const details = gameDetails[gameId];
    detailsDiv.innerHTML = `
        <p>Size: ${details.size}</p>
        <p>Rating: ${details.rating}</p>
        <p>Installs: ${details.installs}</p>
    `;
    
    // Append the details div to game card without removing the existing content
    gameCard.appendChild(detailsDiv);

    // Remove details after 4 seconds and reset the view
    setTimeout(() => {
        gameCard.removeChild(detailsDiv);
        gameCard.classList.remove("details-view");  // Allow new clicks
    }, 1000);
}


    </script>
